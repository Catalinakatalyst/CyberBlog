---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  author?: string;
}

const { title, description, pubDate, author } = Astro.props;
---

<Layout title={title}>
  <article>
    <header>
      <h1>{title}</h1>
      {description && <p class="description">{description}</p>}
      <div class="meta">
        {author && <span class="author">By {author}</span>}
        {pubDate && <span class="date"> â€¢ {pubDate.toLocaleDateString()}</span>}
      </div>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  article {
    max-width: 700px;
    margin: 0 auto;
  }
  
  header {
    margin-bottom: 2rem;
    border-bottom: 1px solid #333;
    padding-bottom: 1rem;
  }
  
  .description {
    font-size: 1.2em;
    color: #ccc;
    font-style: italic;
  }
  
  .meta {
    color: #888;
    font-size: 0.9em;
  }
  
  .author {
    color: #00d2ff;
  }
  
  .content {
    line-height: 1.8;
  }
  
  .content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }
  
  .content h2 {
    color: #00d2ff;
    margin-top: 2rem;
  }
  
  .content h3 {
    color: #66ccff;
  }
  
  .content code {
    background: #1a1d29;
    padding: 2px 6px;
    border-radius: 4px;
    color: #00ff88;
  }
  
  .content pre {
    background: #1a1d29;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid #333;
  }
  
  .content pre code {
    background: none;
    padding: 0;
  }
</style>